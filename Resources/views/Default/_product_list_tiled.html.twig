<div class="row">
    <div class="span12">
        <div class="row">
            {% for product in productsPager %}
            <div class="span3 v-product-tile">
                <div class="thumbnail">
                    <a href="{{ path('v_product_detail', { 'slug': product.slug }) }}">
                        {% include 'VespolinaCommerceBundle:Default:_product_primary_media.html.twig' with {'product': product } %}
                    </a>
                </div>
                <div class="caption">
                    <span class="v-product-name">
                        <a href="{{ path('v_product_detail', { 'slug': product.slug }) }}">
                            {{ product.name }}
                        </a>
                    </span>
                    <div>
                        <a class="btn" href="{{ path('v_cart_add_product', {'productId': product.id}) }}">Add to Cart</a>
                        <span class="v-product-price">
                            {% include 'VespolinaCommerceBundle:Default:_product_prices.html.twig' with {'product': product } %}
                        </span>
                    </div>
                </div>
            </div>
                {% if loop.index is divisibleby (3) %}
        </div>
        <div class="row">
                {% endif %}
            {% else %}
            No products loaded.
            {% endfor %}
        </div>
        <div class="row">
            <div class="navigation pagerfanta">
                {# {{ pagerfanta(productsPager) }} #}
            </div>
        </div>
    </div>
</div>
